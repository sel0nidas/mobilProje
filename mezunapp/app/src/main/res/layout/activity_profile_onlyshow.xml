<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp" />

        <!-- Ad Label and Text View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ad"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Soyad Label and Text View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soyad: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/soyadText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Soyad"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Üniversite Giriş Yılı Label and Text View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Üniversite Giriş Yılı :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/girisYilText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Üniversite Giriş Yılı"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Mezun Yılı Label and Text View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mezun Yılı: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mezunYilText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mezun Yılı"
                android:textSize="14sp" />

        </LinearLayout>
        <!-- Email Label and Text View -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefon Numarası: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/PhoneText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Telefon Numarası"
                android:textSize="14sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnFriendRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arkadaşlık İsteği Gönder" />

        <Button
            android:id="@+id/mailBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mail Üzerinden İletişime Geç" />

        <Button
            android:id="@+id/whatsappBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WhatsApp Üzerinden İletişime Geç" />

    </LinearLayout>
</ScrollView>
